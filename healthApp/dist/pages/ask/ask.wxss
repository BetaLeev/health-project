page {
  background: #f1f2f4;
}
.ask {
  padding: 15rpx;
}
.list-title {
  font-size: 32rpx;
  text-align: center;
  padding: 30rpx;
  background: white;
}
.litt-wrap {
  width: 720rpx;
  height: 200rpx;
  background: white;
  display: flex;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.litt-wrap .img {
  width: 170rpx;
  height: 150rpx;
}
.litt-wrap .content {
  margin-left: 20rpx;
  width: 600rpx;
}
.litt-wrap .content .content-title {
  font-size: 32rpx;
}
.litt-wrap .content .content-info {
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

